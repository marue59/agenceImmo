{% extends 'base.html.twig' %}

{% block title %}Gérer les biens
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h1>Gerer les biens</h1>
		<div class="text-end">
			<a href="{{path('admin.property.new')}}" class="btn btn-primary">Créer un nouveau bien</a>
		</div>
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Titres</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for property in properties %}
					<tr>
						<td>{{ property.title }}</td>
						<td>
							<a href="{{ path('admin.property.edit', {id: property.id}) }}" class="btn btn-info">Modifier</a>
							<form action="{{ path('admin.property.delete', {id: property.id}) }}" method="post" style="display:inline-block" onsubmit="return confirm('Etes-vous sûr de vouloir supprimer ce bien ?');">
								<input type="hidden" name="_method" value="DELETE">
								<input type="hidden" name="token" value="{{csrf_token('delete' ~ property.id)}}">
								<button type="submit" class="btn btn-danger">Supprimer</button>
							</form>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}

                        <a href="{{ path('property.show', {id: property.id , slug: property.slug })}}">{{ property.title }}</a>
                    </h5>
                    <p class="card-text">{{ property.postalCode }} {{ property.city }} </p>
                    <div class="text-primary" style="font-weight: bold; font-size:1.8rem">{{ property.formattedPrice}} â‚¬</div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}